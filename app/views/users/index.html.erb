<% provide(:title, 'All users') %>

<div class="container">
  <div class="row">
    <h3 class="text-center">All users</h3>
      <div class="col-md-12" >
         <% @users.each do |user| %>
            <li class="media">
            <%= gravatar_for user, size: 50 %>
            <%= link_to user.name, user %>
            </li>
         <% end %>
     </div>
  </div>
</div>
