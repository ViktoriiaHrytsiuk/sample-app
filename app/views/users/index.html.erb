<% provide(:title, 'All users') %>

<div class="row">
  <h3 class="text-center">All users</h3>
    <%= will_paginate @posts, :style => 'color:blue' %><div class="container">
      <div class="col-md-12" >
        <ul>
        <% @users.each do |user| %>
        <li class="media">
        <%= gravatar_for user, size: 50 %>
        <%= link_to user.name, user %>
        </li>
        <% end %>
        </ul>
      </div>
 </div>
</div>